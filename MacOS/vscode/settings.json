{
  // Quality of life improvements.
  "editor.linkedEditing": true,
  "editor.parameterHints.cycle": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "terminal.integrated.macOptionIsMeta": true,
  "telemetry.telemetryLevel": "off",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "terminal.integrated.enablePersistentSessions": false,
  "editor.cursorSurroundingLines": 8,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.activityBar.visible": true,
  "workbench.statusBar.visible": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.cursorBlinking": "solid",
  "editor.lineHeight": 1.25,
  "editor.fontFamily": "JetBrainsMono Nerd Font, monospace",
  "editor.fontLigatures": true,
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": false,
  "editor.fontSize": 16,
  "debug.console.fontSize": 16,
  "terminal.integrated.fontSize": 16,
  "editor.wordWrap": "off",
  // Code styles.
  "editor.tabSize": 4,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "css.completion.completePropertyWithSemicolon": false,
  "scss.completion.completePropertyWithSemicolon": false,
  "css.format.spaceAroundSelectorSeparator": true,
  "scss.format.spaceAroundSelectorSeparator": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "cSpell.language": "en,lorem",
  // Minimalism.
  "workbench.commandPalette.history": 0,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.editor.untitled.hint": "hidden",
  "window.dialogStyle": "custom",
  "files.simpleDialog.enable": true,
  // Productivity boost.
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.settings.editor": "json",
  "search.showLineNumbers": true,
  "search.smartCase": true,
  // Extension config.
  "code-runner.runInTerminal": true,
  "errorLens.gutterIconsEnabled": true,
  "errorLens.messageBackgroundMode": "none",
  "errorLens.gutterIconSet": "defaultOutline",
  "errorLens.followCursor": "allLines",
  "errorLens.fontWeight": "bold",
  "errorLens.margin": "8ch",
  "errorLens.gutterIconSize": "150%",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": true
  },
  "oneDarkPro.editorTheme": "Shadow",
  "oneDarkPro.markdownStyle": false,
  "oneDarkPro.bold": true,
  "oneDarkPro.italic": false,
  "oneDarkPro.vivid": true,
  "Lua.telemetry.enable": false,
  "Lua.diagnostics.globals": ["vim"],
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },
  "workbench.colorTheme": "One Dark Pro",
  "workbench.sideBar.location": "right",
  "editor.tokenColorCustomizations": {
    "textMateRules": []
  },
  "cSpell.enableFiletypes": [
    "csv",
    "diff",
    "dotenv",
    "gitignore",
    "lua",
    "pip-requirements",
    "quokka-output",
    "quokka-recent",
    "quokka-timeline",
    "sql",
    "tailwindcss",
    "toml",
    "vimrc"
  ]
}
